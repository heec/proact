{
  "siteName": "Proact SSG Basic Example",
  "templateDir": "templates",
  "assetsDir": "assets",
  "pageCollectionDir": "pages",
  "dataListDir": "lists",
  "outDir": "dist",
  "locales": ["en", "de", "es", "pt"],
  "defaultLocale": "en",
  "components": {
    "blogPostLayout": {
      "label": "Blog Post Layout",
      "template": "layout/BlogPostLayout",
      "props": {
        "backgroundImage": {
          "label": "Backgound Image",
          "type": "asset",
          "required": true
        },
        "fontColor": {
          "label": "Font Color",
          "type": "select",
          "items": [
            { "name": "Black", "value": "#222222" },
            { "name": "Grey", "value": "#bbbbbb" },
            { "name": "White", "value": "#ffffff" }
          ],
          "default": "#222222"
        }
      },
      "children": ["section"]
    },
    "contentPageLayout": {
      "label": "Content Page Layout",
      "template": "layout/ContentPageLayout",
      "props": {
        "pageTitle": {
          "label": "Page Title",
          "type": "string",
          "required": true,
          "localize": true
        },
        "pageDescription": {
          "label": "Page Description",
          "type": "text",
          "required": true,
          "localize": true
        }
      },
      "children": ["hero", "section"]
    },
    "hero": {
      "label": "Hero",
      "template": "container/Hero",
      "props": {
        "title": {
          "label": "Title",
          "type": "string",
          "required": true,
          "localize": true
        },
        "leadText": {
          "label": "Lead Text",
          "type": "text",
          "required": true,
          "localize": true
        },
        "backgroundImage": {
          "label": "Backgound Image",
          "type": "asset",
          "required": true
        },
        "fontColor": {
          "label": "Font Color",
          "type": "select",
          "items": [
            { "name": "Black", "value": "#222222" },
            { "name": "Grey", "value": "#bbbbbb" },
            { "name": "White", "value": "#ffffff" }
          ],
          "default": "#222222"
        }
      },
      "children": null
    },
    "section": {
      "label": "Content Section",
      "template": "container/Section",
      "props": {
        "background": {
          "type": "select",
          "items": [
            { "name": "Default", "value": "" },
            { "name": "Grey Dark", "value": "bg-grey-dark" },
            { "name": "Grey Light", "value": "bg-grey-light" }
          ],
          "default": ""
        }
      },
      "children": ["markdown", "youtubeVideo"]
    },
    "markdown": {
      "label": "Markdown Content",
      "template": "content/Markdown",
      "props": {
        "content": {
          "label": "Text",
          "type": "markdown",
          "required": true,
          "localize": true
        }
      },
      "children": null
    },
    "youtubeVideo": {
      "label": "youtube video",
      "template": "content/YouTubeVideo",
      "props": {
        "videoId": {
          "label": "Video ID",
          "type": "string",
          "required": true,
          "localize": true
        }
      },
      "children": null
    }
  },
  "pages": {
    "blogPosts": {
      "label": "Blog Posts",
      "locales": ["en", "de", "es", "pt"],
      "props": {
        "title": {
          "label": "Title",
          "type": "string",
          "required": true,
          "localize": true,
          "minLength": 20,
          "maxLength": 60
        },
        "abstract": {
          "label": "Abstract",
          "type": "text",
          "required": true,
          "localize": true,
          "minLength": 20,
          "maxLength": 160
        },
        "author": {
          "label": "Author",
          "type": "listRef",
          "list": "authors",
          "listTextField": "displayName",
          "required": true
        },
        "publishDate": {
          "label": "Publish Date",
          "type": "date",
          "required": true
        },
        "relatedPosts": {
          "label": "Related Blog Posts",
          "type": "pageRef",
          "pageCollection": "blogPosts",
          "multiple": true
        }
      },
      "template": {
        "componentId": "blogPostLayout",
        "children": [
          {
            "componentId": "section",
            "props": {
              "background": "mbg"
            },
            "children": [
              {
                "componentId": "markdown",
                "props": {}
              }
            ]
          }
        ]
      }
    },
    "contentPages": {
      "label": "Content Pages",
      "locales": ["en", "de", "es", "pt"],
      "props": {
        "pageTitle": {
          "label": "Page Title",
          "type": "string",
          "required": true,
          "localize": true,
          "minLength": 20,
          "maxLength": 60
        },
        "pageDescription": {
          "label": "Meta Description",
          "type": "string",
          "required": true,
          "localize": true,
          "minLength": 20,
          "maxLength": 160
        }
      },
      "template": {
        "componentId": "contentPageLayout",
        "cildren": [
          {
            "componentId": "section",
            "props": {
              "background": "mbg"
            },
            "children": [
              {
                "componentId": "markdown",
                "props": {}
              }
            ]
          }
        ]
      }
    }
  },
  "lists": {
    "authors": {
      "label": "Authors",
      "locales": ["en", "de", "es", "pt"],
      "props": {
        "displayName": {
          "label": "Name",
          "type": "string",
          "required": true
        },
        "about": {
          "label": "About",
          "localize": true,
          "type": "text"
        },
        "avatar": {
          "label": "Avatar",
          "type": "asset"
        }
      }
    }
  }
}
